: osh
:
: test04 - Aliases
:

echo Begin ...
if $# = # if { fd2 -e echo Invalid shell - osh\(1\) required } \
	if { exit } if A = B
alias
if $? = 1 echo No Aliases Set
alias	tests		"echo test??^tr ' ' '\n';:"
alias	logs		"echo *.log^tr ' ' '\n';:"
alias	TestCounts	"echo Test*Count^tr ' ' '\n';:"
alias	HelloWorld	"echo 'Hello World!'^cat^cat^cat^cat^cat^cat^cat^cat^cat^grep '^H'"
alias	All		"echo *^tr ' ' '\n';:"
( alias ) >/dev/null
if $? = 0 echo Aliases Set
( alias ) ^ awk '{ print NR "\t" $0 }'
echo HelloWorld ... ; HelloWorld ^ awk '{ print NR "\t" $0 }' ; echo .
echo All ... ;        All        ^ awk '{ print NR "\t" $0 }' ; echo .
echo tests ... ;      tests      ^ awk '{ print NR "\t" $0 }' ; echo .
echo logs ... ;       logs       ^ awk '{ print NR "\t" $0 }' ; echo .
echo TestCounts ... ; TestCounts ^ awk '{ print NR "\t" $0 }' ; echo .
unalias	tests
unalias	logs
unalias	TestCounts
unalias	HelloWorld
unalias	All
alias
if $? = 1 echo Aliases Unset
echo End .
