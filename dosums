#!/usr/bin/env osh
:
: osh - " Force sh(1), csh(1), and other shells to exit w/ error! " <'' ;;;
:

: " Check for correct usage. "
: >>$0'' <'' ; : >>$1'' <'' ; killer $0 dosums
if $n = 1 -a X$1 = X-c -o X$1 = X-m goto $1

	pusage $0 '"{-c | -m}"' ; exit

: -c - " Check the current list of files against the SUMS file. "

	mksums dosums Makefile mkconfig *.* | diff SUMS - ; exit

: -m - " Make a new SUMS file from the current list of files. "

	mksums dosums Makefile mkconfig *.* >SUMS
