#!/usr/bin/env osh
:
: osh - " Force sh(1), csh(1), and other shells to exit w/ error! " <'' ;;;
:
: "  The author of this file, J.A. Neitzel <jan (at) v6shell (dot) org>,  "
: "  hereby grants it to the public domain.                               "
:
: "  From:  http://v6shell.org/ubuntu-16/run  "
:

:
: "  usage: ./run [ktrace | strace]  "
:

unsetenv LANG ; setenv LC_ALL C ; setenv POSIXLY_CORRECT ''

trap '' 1 2 3 13 15 ; : trap
umask 22 ; : umask

: >>$0'' <'' ; : >>$1'' <''
if X$u = Xroot if { fd2 -e echo "$0: Not recommended to run as superuser" } \
	if { exit } false
if X$0 != Xrun -a X$0 != X./run if { fd2 -e echo "$0: Wrong directory" } \
	if { exit } false
if ! \( $# -eq 0 -o \
	\( $# -eq 1 -a \
	   \( X"$1" = X"ktrace" -o X"$1" = X"strace" \) \
	\) \
      \) if { fd2 -e echo "usage: $0 [ktrace | strace]" } if { exit } false

which osh >/dev/null
if $? -ne 0 if { exit } false
echo $v | egrep '^(osh-current|osh-4.3.0-test1|osh-4.3.0)$' >/dev/null
if $? -ne 0 \
  if { fd2 -e echo "$0: osh-current, osh-4.3.0-test1, or osh-4.3.0 required" } \
    if { exit } false

set D "run-tmp-$$"
if ! { mkdir "$D" } if { exit } false
: fd2 -e echo "==== tmp dir == $D ===="
: fd2 -e echo
( \
  echo -n 'set R "' ; \
  pwd | sed 's,/*$,, ; s,[^/]*$,, ; s,/*$,,' | tr -d '\n' ; \
  echo '"' \
) >$D/R
source ./$D/R
echo $p | grep "^$R:" >/dev/null
if $? -eq 0 goto NoPathModNeeded
	echo 'setenv PATH "$R:$p"' >$D/PATH
	source ./$D/PATH
	: fd2 -e echo "PATH=$p"
	: fd2 -e echo
	: fallthrough
: NoPathModNeeded
	echo 'set O "$R/osh"' >$D/O
	source ./$D/O
	echo 'set S "$R/sh6"' >$D/S
	source ./$D/S

:
: " ./test-woss(+lnferr) w/ EXECSHELL set to (osh|sh6) "
:
set E "$e"
setenv EXECSHELL "$O"
fd2 -e echo "EXECSHELL=$e"
fd2 -e echo '==== ./test-woss w/ EXECSHELL set to osh ===='
./test-woss
fd2 -e echo "==== status == $?; ===="
fd2 -e echo '==== ./test-woss+lnferr ... ===='
./test-woss+lnferr
fd2 -e echo "==== status == $?; ===="
setenv EXECSHELL "$S"
fd2 -e echo "EXECSHELL=$e"
fd2 -e echo '==== ./test-woss w/ EXECSHELL set to sh6 ===='
if { ./test-woss }
fd2 -e echo "==== status == $?; ===="
fd2 -e echo '==== ./test-woss+lnferr ... ===='
./test-woss+lnferr
fd2 -e echo "==== status == $?; ===="
setenv EXECSHELL "$E"
fd2 -e echo "EXECSHELL=$e"
fd2 -e echo

:
: " ./test-wss(+lnferr).(osh|sh6) w/ (osh|sh6) "
:
fd2 -e echo '==== ./test-wss.osh w/ osh ===='
./test-wss.osh
fd2 -e echo "==== status == $?; ===="
fd2 -e echo '==== ./test-wss+lnferr.osh ... ===='
./test-wss+lnferr.osh
fd2 -e echo "==== status == $?; ===="
fd2 -e echo
fd2 -e echo '==== ./test-wss.sh6 w/ sh6 ===='
set A -1 ; set B -1 ; set C -1
if $# -eq 0 if { ./test-wss.sh6 }
set A $?
if $# -eq 1 -a X"$1" = X"ktrace" \
	if { ktrace -f test-wss.sh6+ktrace.out -i -tc ./test-wss.sh6 ktrace }
set B $?
if $# -eq 1 -a X"$1" = X"strace" \
	if { strace -o test-wss.sh6+strace.out ./test-wss.sh6 strace }
set C $?
fd2 -e echo "==== status == $A, $B, $C; ===="
unset A ; unset B ; unset C
fd2 -e echo '==== ./test-wss+lnferr.sh6 ... ===='
./test-wss+lnferr.sh6
fd2 -e echo "==== status == $?; ===="
fd2 -e echo

:
: " ./test-wss+sh6-ext-gigig.osh ('"goto"'|"'goto'"|goto) "
:
fd2 -e echo '==== ./test-wss+sh6-ext-gigig.osh ''"goto"'' ===='
if { ./test-wss+sh6-ext-gigig.osh '"goto"' }
fd2 -e echo "==== status == $?; ===="
fd2 -e echo '==== ./test-wss+sh6-ext-gigig.osh '"'goto'"' ===='
if { ./test-wss+sh6-ext-gigig.osh "'goto'" }
fd2 -e echo "==== status == $?; ===="
fd2 -e echo '==== ./test-wss+sh6-ext-gigig.osh goto ===='
if { ./test-wss+sh6-ext-gigig.osh goto }
fd2 -e echo "==== status == $?; ===="

rm -rf $D
